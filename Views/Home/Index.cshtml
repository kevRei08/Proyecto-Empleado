@model IEnumerable<Proyecto_Empleado.Models.Empleado>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Registro de Empleados</h1>

<div class="row">
    <div class="col-12">
        <div class="float-right">

            <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo Empleado</a>

        </div>

    </div>

</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de Empleados</strong></h3>

            </div>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaEmpleados" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Nombres)</th>
                                <th>@Html.DisplayNameFor(m => m.Apellidos)</th>
                                <th>@Html.DisplayNameFor(m => m.TipoDocumento)</th>
                                <th>@Html.DisplayNameFor(m => m.Documento)</th>
                                <th>@Html.DisplayNameFor(m => m.Area)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Nombres)</td>
                                    <td>@Html.DisplayFor(m => item.Apellidos)</td>
                                    <td>@Html.DisplayFor(m => item.TipoDocumento)</td>
                                    <td>@Html.DisplayFor(m => item.Documento)</td>
                                    <td>@Html.DisplayFor(m => item.Area)</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }

            </div>

        </div>

    </div>

</div>

@section Scripts{
    <script>$(document).ready(function () {
            //Llamar a datatable

            $('#tablaEmpleados').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });</script>
}